
USE_OCAMLFIND = true
NATIVE_ENABLED = true
BYTE_ENABLED = true

OCAMLFLAGS += -annot -thread
OCAMLOPTFLAGS += -inline 100

.SUBDIRS: src test

.SUBDIRS: leveldb
    libleveldb.a:
       make $@
   
    clean:
       make clean

PACKAGE_FILES = $(cd src, $(ls *.cma *.cmxa *.cmx *.cmi *.mli *.so *.a))

.PHONY: install
install:
	ocamlfind install leveldb META $(PACKAGE_FILES)

.PHONY: uninstall
uninstall:
	ocamlfind remove leveldb
